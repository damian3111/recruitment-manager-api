<?xml version="1.0" encoding="UTF-8"?>
<ehcache:config
        xmlns:ehcache="http://www.ehcache.org/v3"
        xmlns:jcache="http://www.ehcache.org/v3/jsr107">

    <ehcache:cache alias="candidates" uses-template="default">
        <ehcache:key-type>java.lang.Long</ehcache:key-type>
        <ehcache:value-type>com.damian3111.recruitment_manager_api.persistence.entities.CandidateEntity</ehcache:value-type>
        <ehcache:expiry>
            <ehcache:ttl unit="minutes">30</ehcache:ttl>
        </ehcache:expiry>
        <ehcache:heap unit="entries">1000</ehcache:heap>
    </ehcache:cache>

    <ehcache:cache alias="candidatesList" uses-template="default">
        <ehcache:key-type>java.lang.String</ehcache:key-type>
        <ehcache:value-type>java.util.List</ehcache:value-type>
        <ehcache:expiry>
            <ehcache:ttl unit="minutes">30</ehcache:ttl>
        </ehcache:expiry>
        <ehcache:heap unit="entries">100</ehcache:heap>
    </ehcache:cache>

    <ehcache:cache alias="candidatesPage12" uses-template="default">
        <ehcache:key-type>org.springframework.data.domain.Pageable</ehcache:key-type>
        <ehcache:value-type>org.springframework.data.domain.Page</ehcache:value-type>
        <ehcache:expiry>
            <ehcache:ttl unit="minutes">30</ehcache:ttl>
        </ehcache:expiry>
        <ehcache:heap unit="entries">100</ehcache:heap>
    </ehcache:cache>

    <ehcache:cache-template name="default">
        <ehcache:expiry>
            <ehcache:ttl unit="minutes">30</ehcache:ttl>
        </ehcache:expiry>
        <ehcache:heap unit="entries">1000</ehcache:heap>
    </ehcache:cache-template>

    <ehcache:cache alias="jobs" uses-template="default">
        <ehcache:key-type>java.lang.Long</ehcache:key-type>
        <ehcache:value-type>com.damian3111.recruitment_manager_api.persistence.entities.JobEntity</ehcache:value-type>
        <ehcache:expiry>
            <ehcache:ttl unit="minutes">30</ehcache:ttl>
        </ehcache:expiry>
        <ehcache:heap unit="entries">1000</ehcache:heap>
    </ehcache:cache>

    <ehcache:cache alias="jobsList" uses-template="default">
        <ehcache:key-type>java.lang.String</ehcache:key-type>
        <ehcache:value-type>java.util.List</ehcache:value-type>
        <ehcache:expiry>
            <ehcache:ttl unit="minutes">30</ehcache:ttl>
        </ehcache:expiry>
        <ehcache:heap unit="entries">100</ehcache:heap>
    </ehcache:cache>

    <ehcache:cache alias="jobsPage" uses-template="default">
        <ehcache:key-type>org.springframework.data.domain.Pageable</ehcache:key-type>
        <ehcache:value-type>org.springframework.data.domain.Page</ehcache:value-type>
        <ehcache:expiry>
            <ehcache:ttl unit="minutes">30</ehcache:ttl>
        </ehcache:expiry>
        <ehcache:heap unit="entries">100</ehcache:heap>
    </ehcache:cache>

</ehcache:config>